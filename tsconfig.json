{
  "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "rootDir": "./src",
      "outDir": "./dist",
      "esModuleInterop": true,
      "strict": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "strictNullChecks": true,

  },
  "include": ["./src/**/*", "./tests/**/*"],
  "exclude": ["node_modules"] 
}

